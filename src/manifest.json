{
  "name": "True Ignore (for EXBO Forum)",
  "description": "Теперь игнорируемые пользователи точно не будут мозолить ваши глаза!",
  "version": "0.4",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_frames" : false,
      "run_at" : "document_end",
      "js": [
        "index.js"
      ],
      "matches": [
        "https://forum.exbo.net/*"
      ]
    }
  ]
}